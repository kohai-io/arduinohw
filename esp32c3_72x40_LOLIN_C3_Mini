#include <Wire.h>
#include <U8g2lib.h>

// Pins: clock=6, data=5.
U8G2_SSD1306_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, U8X8_PIN_NONE, 6, 5);

void setup(void) {
  delay(1000);                 // Allow time for the screen to initialise
  u8g2.begin();                // Initialize the display
  u8g2.setContrast(255);       // Set maximum contrast
  u8g2.setBusClock(400000);    // Set I2C bus speed (optional)

  u8g2.setFont(u8g2_font_ncenB10_tr); // Set the font
  u8g2.setCursor(0,0); // Adjust these coordinates for centring as needed
  // Draw a frame around the text area (optional)
 // u8g2.drawFrame(0, 0, 72, 40);

  // Center the text roughly within the frame
  u8g2.setCursor(50, 45); // Adjust these coordinates for centring as needed
  u8g2.printf("Hello");

  // Render everything to the screen
  u8g2.sendBuffer();
}

void loop(void) {
  // Nothing to do in the loop
}
